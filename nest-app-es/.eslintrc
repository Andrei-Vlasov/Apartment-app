{
    "root": true,
    "env": {
        "node": true
    },
    "plugins": [
        "prettier"
    ],
    "extends": [
        "prettier",
        "eslint:recommended"
    ],
    "rules": {
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "prettier/prettier": "error"
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "legacyDecorators": true
        }
    }
}